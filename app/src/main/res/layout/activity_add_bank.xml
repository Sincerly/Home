<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_f2f2f2"
    android:orientation="vertical">

    <include layout="@layout/include_title" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--持卡人-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/colorWhite">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:ems="5"
                    android:text="持卡人:"
                    android:textColor="@color/color_282828"
                    android:textSize="@dimen/sp_15" />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/bankUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入持卡人姓名"
                    android:paddingLeft="@dimen/dp_4"
                    android:paddingRight="@dimen/dp_16"
                    android:singleLine="true"
                    android:textColor="@color/color_282828"
                    android:textColorHint="@color/color_989898"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/color_f2f2f2" />

            <!--银行名称-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:background="@color/colorWhite">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:ems="5"
                    android:text="银行名称:"
                    android:textColor="@color/color_282828"
                    android:textSize="@dimen/sp_15" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/bankSelectPicker"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:drawableRight="@mipmap/icon_light_gray_down"
                    android:gravity="center_vertical"
                    android:hint="请选择银行名称"
                    android:paddingLeft="@dimen/dp_4"
                    android:paddingRight="@dimen/dp_16"
                    android:singleLine="true"
                    android:textColor="@color/color_282828"
                    android:textColorHint="@color/color_989898"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/color_f2f2f2" />
            <!--开户行-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:background="@color/colorWhite">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:ems="5"
                    android:text="开户行:"
                    android:textColor="@color/color_282828"
                    android:textSize="@dimen/sp_15" />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/bankName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入开户行"
                    android:paddingLeft="@dimen/dp_4"
                    android:paddingRight="@dimen/dp_16"
                    android:singleLine="true"
                    android:textColor="@color/color_282828"
                    android:textColorHint="@color/color_989898"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/color_f2f2f2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:background="@color/colorWhite">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:ems="5"
                    android:text="卡号:"
                    android:textColor="@color/color_282828"
                    android:textSize="@dimen/sp_15" />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/bankNo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入卡号"
                    android:paddingLeft="@dimen/dp_4"
                    android:paddingRight="@dimen/dp_16"
                    android:singleLine="true"
                    android:textColor="@color/color_282828"
                    android:textColorHint="@color/color_989898"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

            <Button
                android:id="@+id/submit"
                style="@style/BtnRoundThemeBlue"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_24"
                android:layout_marginBottom="@dimen/dp_44"
                android:text="发布" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>