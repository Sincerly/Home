<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <include layout="@layout/include_title" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_16">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp_16">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.ysxsoft.common_base.view.custom.image.CircleImageView
                            android:id="@+id/logo"
                            android:layout_width="77dp"
                            android:layout_height="77dp"
                            android:src="@mipmap/temp_shop" />

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_gravity="right"
                            android:src="@mipmap/icon_smanager_camera" />
                    </FrameLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dp_16"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@mipmap/icon_smanager_phone"
                            android:drawableRight="@mipmap/icon_blue_edit"
                            android:drawablePadding="@dimen/dp_16"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/color_282828"
                            android:textSize="@dimen/sp_14" />

                        <TextView
                            android:id="@+id/time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_16"
                            android:drawableLeft="@mipmap/icon_smanager_time"
                            android:drawableRight="@mipmap/icon_light_gray_down"
                            android:drawablePadding="@dimen/dp_16"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/color_282828"
                            android:textSize="@dimen/sp_14" />

                        <TextView
                            android:id="@+id/status"
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_16"
                            android:drawableLeft="@mipmap/icon_shop_gray_logo"
                            android:drawableRight="@mipmap/icon_light_gray_down"
                            android:drawablePadding="@dimen/dp_16"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/color_282828"
                            android:textSize="@dimen/sp_14" />
                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/dp_16">

                <View
                    android:layout_width="@dimen/dp_2"
                    android:layout_height="@dimen/dp_20"
                    android:background="@color/theme_blue_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_weight="1"
                    android:text="基本信息"
                    android:textColor="@color/color_282828"
                    android:textSize="@dimen/sp_15" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_24"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:ems="4"
                    android:text="商家类型"
                    android:textColor="@color/color_989898"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/shopType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_24"
                    android:text="超市"
                    android:textColor="@color/color_282828"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:ems="4"
                    android:text="店铺名称"
                    android:textColor="@color/color_989898"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/shopName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_24"
                    android:text=""
                    android:textColor="@color/color_282828"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:ems="4"
                    android:text="姓名"
                    android:textColor="@color/color_989898"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_24"
                    android:text=""
                    android:textColor="@color/color_282828"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:ems="4"
                    android:text="地址"
                    android:textColor="@color/color_989898"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/shopAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_24"
                    android:text=""
                    android:textColor="@color/color_282828"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:ems="4"
                    android:text="详细地址"
                    android:textColor="@color/color_989898"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/shopDetailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_24"
                    android:text=""
                    android:textColor="@color/color_282828"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_16"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/dp_16">

                <View
                    android:layout_width="@dimen/dp_2"
                    android:layout_height="@dimen/dp_20"
                    android:background="@color/theme_blue_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_weight="1"
                    android:text="证件照片"
                    android:textColor="@color/color_282828"
                    android:textSize="@dimen/sp_15" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:ems="4"
                    android:text="门头照"
                    android:textColor="@color/color_989898"
                    android:textSize="@dimen/sp_14" />

                <ImageView
                    android:id="@+id/shopHeaderImage"
                    android:layout_width="230dp"
                    android:layout_height="115dp"
                    android:layout_marginLeft="@dimen/dp_24"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/temp_shop"
                    android:textColor="@color/color_282828"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_marginBottom="@dimen/dp_72"
                android:layout_marginTop="@dimen/dp_16"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:ems="4"
                    android:text="营业执照"
                    android:textColor="@color/color_989898"
                    android:textSize="@dimen/sp_14" />

                <LinearLayout
                    android:layout_width="230dp"
                    android:layout_height="150dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/shopQualificationImage"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_24"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/temp_shop"
                        android:textColor="@color/color_282828"
                        android:textSize="@dimen/sp_14" />

                    <ImageView
                        android:id="@+id/shopQualificationImage2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_weight="1"
                        android:visibility="invisible"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/temp_shop"
                        android:textColor="@color/color_282828"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>