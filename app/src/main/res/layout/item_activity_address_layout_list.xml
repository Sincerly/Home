<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_16"
        android:layout_marginVertical="@dimen/dp_16"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/addressName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="葛仙女"
            android:textColor="@color/color_282828"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/addressPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18739509196"
            android:textColor="@color/color_282828"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <TextView
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_16"
        android:text="河南省郑州市中原区大学科技园东区16C1003室河南省郑州市中原区大学科技园东区16C1003室河南省郑州市中原区大学科技园东区16C1003室"
        android:textColor="@color/color_282828"
        android:textSize="@dimen/sp_14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_f2f2f2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            android:drawableLeft="@drawable/bg_address"
            android:drawablePadding="@dimen/dp_10"
            android:text="设为默认"
            android:textColor="@color/text_color_282828_989898_selected"
            android:textSize="@dimen/sp_14" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_1" android:layout_weight="1"/>
        <TextView
            android:id="@+id/edit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingHorizontal="@dimen/dp_16"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_989898"
            android:text="编辑" />

        <TextView
            android:paddingHorizontal="@dimen/dp_16"
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_989898"
            android:text="删除" />
    </LinearLayout>
</LinearLayout>