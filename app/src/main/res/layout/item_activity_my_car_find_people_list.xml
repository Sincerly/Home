<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_radius_8"
    android:layout_marginLeft="@dimen/dp_16"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_16"
    android:orientation="vertical"
    android:padding="@dimen/dp_16">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_start_location" />

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/color_cccccc" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_end_location" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10">

            <TextView
                android:id="@+id/start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="河南省新乡市红旗区"
                android:textColor="@color/color_282828"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:id="@+id/end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="河南省新乡市红旗区"
                android:textColor="@color/color_282828"
                android:textSize="@dimen/sp_15" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:text="发车时间：4月19日 16：00"
        android:textColor="@color/color_686868"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/carName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="车型：大众朗逸"
        android:textColor="@color/color_686868"
        android:textSize="@dimen/sp_13" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/numlabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="剩余空位:"
            android:textColor="@color/color_686868"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="2"
            android:textColor="@color/theme_blue_color"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="位"
            android:textColor="@color/color_686868"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_72"
            android:text="状态:"
            android:textColor="@color/color_686868"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:text="进行中"
            android:textColor="@color/theme_blue_color"
            android:textSize="@dimen/sp_13" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@color/color_f2f2f2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/bg_shape_white_cccccc_border_r5"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingVertical="@dimen/dp_4"
            android:text="编辑"
            android:textColor="@color/color_282828"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/bg_shape_white_cccccc_border_r5"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingVertical="@dimen/dp_4"
            android:text="下架"
            android:textColor="@color/color_282828"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_shape_white_cccccc_border_r5"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingVertical="@dimen/dp_4"
            android:text="删除"
            android:textColor="@color/color_282828"
            android:textSize="@dimen/sp_13" />
    </LinearLayout>
</LinearLayout>