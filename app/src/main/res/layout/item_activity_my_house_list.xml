<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_16"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_16"
    android:background="@drawable/bg_white_radius_8"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/dp_16"
    android:paddingVertical="@dimen/dp_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="horizontal">
        <com.ysxsoft.common_base.view.custom.image.RoundImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:src="@mipmap/temp_shop"
            app:radius="@dimen/dp_5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/dp_16">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="通和盛世"
                android:textColor="@color/color_282828"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:id="@+id/subname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:singleLine="true"
                android:text="三室一厅 | 126㎡ | 二手房"
                android:textColor="@color/color_989898"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:drawableLeft="@mipmap/icon_hourse_location"
                android:drawablePadding="@dimen/dp_8"
                android:singleLine="true"
                android:text="河南省郑州市惠济区京广河南省郑州市惠济区京广"
                android:textColor="@color/color_989898"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:singleLine="true"
                android:text="¥15500"
                android:textColor="@color/color_e70d0d"
                android:textSize="@dimen/sp_15" />
        </LinearLayout>
    </LinearLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@color/color_f2f2f2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:text="已下架"
            android:textColor="@color/color_686868"
            android:textSize="@dimen/sp_13"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/bg_shape_white_cccccc_border_r5"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingVertical="@dimen/dp_4"
            android:text="编辑"
            android:textColor="@color/color_282828"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/bg_shape_white_cccccc_border_r5"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingVertical="@dimen/dp_4"
            android:text="下架"
            android:textColor="@color/color_282828"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_shape_white_cccccc_border_r5"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingVertical="@dimen/dp_4"
            android:text="删除"
            android:textColor="@color/color_282828"
            android:textSize="@dimen/sp_13" />
    </LinearLayout>
</LinearLayout>