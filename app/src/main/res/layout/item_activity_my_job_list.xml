<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_16"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_16"
    android:background="@drawable/bg_white_radius_8"
    android:orientation="vertical"
    android:padding="@dimen/dp_16">

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/typeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="100dp"
            android:text="服务业"
            android:textColor="@color/theme_blue_color"
            android:textSize="@dimen/sp_15" />

        <View
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_16"
            android:background="@color/color_989898" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="餐饮前厅经理餐饮前厅"
            android:textColor="@color/color_282828"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8K-12K"
            android:textColor="@color/color_e70d0d"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_14"
        android:text="郑州 | 中原区 | 1-3年 | 大专"
        android:textColor="@color/color_686868"
        android:textSize="@dimen/sp_13" />



    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@color/color_f2f2f2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="已下架"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/bg_shape_white_cccccc_border_r5"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingVertical="@dimen/dp_4"
            android:text="编辑"
            android:textColor="@color/color_282828"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/bg_shape_white_cccccc_border_r5"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingVertical="@dimen/dp_4"
            android:text="取消下架"
            android:textColor="@color/color_282828"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_shape_white_cccccc_border_r5"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingVertical="@dimen/dp_4"
            android:text="删除"
            android:textColor="@color/color_282828"
            android:textSize="@dimen/sp_13" />
    </LinearLayout>


</LinearLayout>