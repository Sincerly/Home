<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/dp_10"
    android:background="@color/colorWhite"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp_16">

        <TextView
            android:id="@+id/orderNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="订单号：12312312331"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/orderStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="待付款"
            android:textColor="@color/theme_blue_color"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_f2f2f2"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/productRecyclerView"
        android:layout_width="match_parent"
        android:focusable="false"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginVertical="@dimen/dp_10"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/orderProductTotalNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="共3件商品 实付"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_14" />
         <TextView
            android:id="@+id/orderProductTotalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=" ￥179"
            android:textColor="@color/color_e70d0d"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_f2f2f2"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="right"
       android:paddingVertical="@dimen/dp_10"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/left"
            android:layout_width="wrap_content"
            android:text="取消订单"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_12"
            android:background="@drawable/bg_shape_e6e6e6_color_r4"
            android:layout_height="@dimen/dp_24" />

        <Button
            android:id="@+id/right"
            android:layout_width="wrap_content"
            android:text="立即支付"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_12"
            android:background="@drawable/bg_shape_theme_color_r4"
            android:layout_height="@dimen/dp_24" />

        <TextView
            android:id="@+id/tips"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:text="等待买家收货"
            android:textSize="@dimen/sp_14"
            android:layout_marginRight="@dimen/dp_16"
            android:textColor="@color/color_282828"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>