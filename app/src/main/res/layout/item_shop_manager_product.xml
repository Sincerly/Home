<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="0dp"
    android:translationZ="0dp"
    android:layout_marginLeft="@dimen/dp_16"
    android:layout_marginRight="@dimen/dp_16"
    android:layout_marginTop="@dimen/dp_4"
    android:layout_marginBottom="@dimen/dp_4"
    app:cardCornerRadius="@dimen/dp_5">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.ysxsoft.common_base.view.custom.image.RoundImageView
                android:layout_margin="@dimen/dp_5"
                android:id="@+id/logo"
                app:radius="@dimen/dp_5"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="fitXY"
                android:src="@mipmap/temp_min_banner"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_10">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16"
                    android:maxLines="2"
                    android:text="舒克牙膏150克"
                    android:textColor="@color/color_282828"
                    android:textSize="@dimen/sp_14" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="¥15.00"
                        android:textColor="@color/color_e70d0d"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/kucun"
                        android:layout_width="wrap_content"
                        android:text="库存：666"
                        android:textColor="@color/color_989898"
                        android:layout_marginRight="@dimen/dp_16"
                        android:textSize="@dimen/sp_14"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_marginVertical="@dimen/dp_10"
            android:layout_width="match_parent"
            android:background="@color/color_f2f2f2"
            android:layout_height="@dimen/dp_1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginHorizontal="@dimen/dp_10"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:text="已下架"
                android:textColor="@color/theme_blue_color"
                android:textSize="@dimen/sp_13"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/add"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:background="@drawable/bg_shape_white_cccccc_border_r5"
                android:paddingHorizontal="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_10"
                android:paddingVertical="@dimen/dp_4"
                android:text="进货"
                android:textColor="@color/color_282828"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:id="@+id/down"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:background="@drawable/bg_shape_white_cccccc_border_r5"
                android:paddingHorizontal="@dimen/dp_12"
                android:paddingVertical="@dimen/dp_4"
                android:text="下架"
                android:textColor="@color/color_282828"
                android:textSize="@dimen/sp_13" />
        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>